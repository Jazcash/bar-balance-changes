    "version": "0.2.0",
    "configurations": [
        {
            "name": "test.ts",
            "type": "pwa-node",
            "request": "launch",
            "args": ["working-files/test.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
          }
    ]
